<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label styleClass="panel-title" text="Maps">
         <VBox.margin>
            <Insets left="8.0" top="8.0" />
         </VBox.margin>
      </Label>
      <SplitPane dividerPositions="0.2" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
         <items>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <HBox spacing="2.0">
                     <children>
                        <Button fx:id="btnAdd" mnemonicParsing="false" styleClass="btn" />
                        <Button fx:id="btnEdit" mnemonicParsing="false" styleClass="btn" />
                        <Button fx:id="btnDelete" mnemonicParsing="false" styleClass="btn" />
                     </children>
                     <padding>
                        <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                     </padding>
                  </HBox>
                  <ListView fx:id="listview" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
            <VBox>
               <children>
                  <StackPane fx:id="stackPane" prefHeight="150.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
                  <HBox spacing="4.0">
                     <children>
                        <Label fx:id="lblCoordinate" />
                        <Label text="Latitude:" />
                        <Label fx:id="lblLatitude" text="0.0" />
                        <Label text="Longitude:" />
                        <Label fx:id="lblLongitude" text="0.0" />
                     </children>
                     <padding>
                        <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                     </padding>
                  </HBox>
               </children>
            </VBox>
         </items>
      </SplitPane>
   </children>
   <stylesheets>
      <URL value="@../styles.css" />
      <URL value="@../icons_styles.css" />
   </stylesheets>
</VBox>
