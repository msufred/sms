<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefWidth="300.0" spacing="8.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label styleClass="form-title" text="New Revenue">
         <VBox.margin>
            <Insets left="16.0" top="16.0" />
         </VBox.margin></Label>
      <HBox>
         <children>
            <Label minWidth="70.0" styleClass="form-label" text="Date" />
            <DatePicker fx:id="datePicker" prefWidth="220.0" promptText="Select Date" styleClass="form-datepicker" />
         </children>
         <VBox.margin>
            <Insets left="16.0" right="16.0" />
         </VBox.margin>
      </HBox>
      <HBox>
         <children>
            <Label minWidth="70.0" styleClass="form-label" text="Type" />
            <ComboBox fx:id="cbTypes" prefWidth="220.0" promptText="Select Revenue Type" styleClass="form-combobox" />
         </children>
         <VBox.margin>
            <Insets left="16.0" right="16.0" />
         </VBox.margin>
      </HBox>
      <VBox spacing="4.0" styleClass="form-content-grey">
         <children>
            <HBox fx:id="typeGroup" disable="true">
               <children>
                  <Label fx:id="lblType" minWidth="70.0" styleClass="form-label" text="Hotspot" />
                  <ComboBox fx:id="cbTypeList" prefWidth="220.0" promptText="Select WiFi Hotspot" styleClass="form-combobox" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
         <VBox.margin>
            <Insets left="8.0" right="8.0" />
         </VBox.margin>
      </VBox>
      <HBox>
         <children>
            <Label minWidth="70.0" styleClass="form-label" text="Amount" />
            <TextField fx:id="tfAmount" prefWidth="220.0" promptText="Enter Amount" styleClass="form-field" />
         </children>
         <VBox.margin>
            <Insets left="16.0" right="16.0" />
         </VBox.margin>
      </HBox>
      <HBox>
         <children>
            <Label minWidth="70.0" styleClass="form-label" text="Remarks" />
            <TextArea fx:id="taRemarks" prefHeight="100.0" prefWidth="220.0" promptText="Remarks or Comments" styleClass="form-textarea" wrapText="true" />
         </children>
         <VBox.margin>
            <Insets left="16.0" right="16.0" />
         </VBox.margin>
      </HBox>
      <ProgressBar fx:id="progressBar" prefHeight="18.0" prefWidth="260.0" visible="false">
         <VBox.margin>
            <Insets left="16.0" right="16.0" />
         </VBox.margin></ProgressBar>
      <HBox alignment="CENTER_RIGHT">
         <children>
            <Button fx:id="btnSave" mnemonicParsing="false" styleClass="form-button-positve" text="Add Revenue" />
         </children>
         <VBox.margin>
            <Insets bottom="16.0" left="16.0" right="16.0" />
         </VBox.margin>
      </HBox>
   </children>
   <stylesheets>
      <URL value="@styles.css" />
      <URL value="@icons_styles.css" />
   </stylesheets>
</VBox>
