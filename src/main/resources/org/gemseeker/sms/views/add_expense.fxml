<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="container" spacing="8.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label styleClass="form-title" text="New Expense" />
      <HBox>
         <children>
            <Label minWidth="60.0" styleClass="form-label" text="Date" />
            <DatePicker fx:id="datePicker" prefWidth="200.0" promptText="Select Date" styleClass="form-datepicker" />
         </children>
      </HBox>
      <HBox>
         <children>
            <Label minWidth="60.0" styleClass="form-label" text="Type" />
            <ComboBox fx:id="cbTypes" prefWidth="200.0" promptText="Select Expense Type" styleClass="form-combobox" />
         </children>
      </HBox>
      <HBox>
         <children>
            <Label minWidth="60.0" styleClass="form-label" text="Amount" />
            <TextField fx:id="tfAmount" prefWidth="200.0" promptText="Enter Amount" styleClass="form-field" />
         </children>
      </HBox>
      <ProgressBar fx:id="progressBar" prefHeight="18.0" prefWidth="260.0" visible="false" />
      <HBox alignment="CENTER_RIGHT">
         <children>
            <Button fx:id="btnSave" mnemonicParsing="false" styleClass="form-button-positve" text="Add Expense" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
   </padding>
   <stylesheets>
      <URL value="@styles.css" />
      <URL value="@icons_styles.css" />
   </stylesheets>
</VBox>
