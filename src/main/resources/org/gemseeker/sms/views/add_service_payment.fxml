<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="8.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label styleClass="form-title" text="Service Payment" />
      <ComboBox fx:id="cbServices" minWidth="300.0" prefWidth="150.0" promptText="Select Service" styleClass="form-combobox" />
      <HBox prefWidth="200.0" spacing="4.0" styleClass="form-content-grey">
         <children>
            <Label styleClass="form-label" text="Service Fee:" />
            <Label fx:id="lblPrice" styleClass="form-label-value" text="0" />
         </children>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER_RIGHT" spacing="8.0">
         <children>
            <Button fx:id="btnAdd" disable="true" minWidth="80.0" mnemonicParsing="false" styleClass="form-button-positve" text="Add" />
            <Button fx:id="btnCancel" minWidth="80.0" mnemonicParsing="false" styleClass="form-button-regular" text="Cancel" />
         </children>
         <VBox.margin>
            <Insets top="16.0" />
         </VBox.margin>
      </HBox>
   </children>
   <stylesheets>
      <URL value="@styles.css" />
      <URL value="@icons_styles.css" />
   </stylesheets>
   <padding>
      <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
   </padding>
</VBox>
