<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="500.0" prefWidth="500.0" spacing="8.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label styleClass="form-title" text="Add Purchase">
         <VBox.margin>
            <Insets left="16.0" top="16.0" />
         </VBox.margin>
      </Label>
      <HBox alignment="CENTER_LEFT">
         <children>
            <RadioButton fx:id="rbAccount" minWidth="110.0" mnemonicParsing="false" selected="true" text="Account" />
            <ComboBox fx:id="cbAccounts" prefWidth="500.0" promptText="Select Account" HBox.hgrow="ALWAYS" />
         </children>
         <VBox.margin>
            <Insets left="16.0" right="16.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER_LEFT">
         <children>
            <RadioButton fx:id="rbWalkIn" minWidth="110.0" mnemonicParsing="false" text="Walk-in Client" />
            <TextField fx:id="tfClientName" disable="true" promptText="Enter Client Name" HBox.hgrow="ALWAYS" />
         </children>
         <VBox.margin>
            <Insets left="16.0" right="16.0" />
         </VBox.margin>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
         <children>
            <VBox prefHeight="355.0" prefWidth="200.0" spacing="4.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label text="Purchased Item(s)s" />
                  <ComboBox fx:id="cbPurchaseType" prefWidth="240.0" promptText="Select Purchase Type" />
                  <ListView fx:id="purchaseList" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
                  <HBox spacing="8.0">
                     <children>
                        <Button fx:id="btnAddItem" disable="true" mnemonicParsing="false" prefWidth="200.0" styleClass="form-button-regular" text="Add Item" HBox.hgrow="ALWAYS" />
                        <Button fx:id="btnDeleteItem" disable="true" mnemonicParsing="false" prefWidth="200.0" styleClass="form-button-regular" text="Remove Item" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="8.0" left="4.0" right="8.0" />
               </padding>
            </VBox>
            <VBox styleClass="form-content-grey" HBox.hgrow="ALWAYS">
               <children>
                  <Label text="Purchase Details" />
                  <HBox spacing="8.0">
                     <children>
                        <Label styleClass="form-label" text="Total" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label fx:id="lblTotal" styleClass="form-label-value" text="0.00" />
                     </children>
                     <VBox.margin>
                        <Insets top="16.0" />
                     </VBox.margin>
                  </HBox>
                  <HBox spacing="8.0">
                     <children>
                        <Label styleClass="form-label" text="Amount Paid" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label fx:id="lblAmountPaid" styleClass="form-label-value" text="0.00" />
                     </children>
                  </HBox>
                  <HBox spacing="8.0">
                     <children>
                        <Label styleClass="form-label" text="Change" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label fx:id="lblChange" styleClass="form-label-value" text="0.00" />
                     </children>
                  </HBox>
                  <Region prefHeight="100.0" VBox.vgrow="ALWAYS" />
                  <Label styleClass="form-label" text="Enter Amount" />
                  <TextField fx:id="tfAmount" alignment="CENTER_RIGHT" promptText="0.00" styleClass="form-field">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </TextField>
               </children>
               <padding>
                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
               </padding>
            </VBox>
         </children>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER_RIGHT" spacing="8.0">
         <children>
            <Button fx:id="btnDiscard" mnemonicParsing="false" styleClass="form-button-regular" text="Discard" />
            <Button fx:id="btnAcceptPayment" mnemonicParsing="false" styleClass="form-button-positve" text="Accept Payment" />
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <padding>
            <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
         </padding>
      </HBox>
   </children>
   <stylesheets>
      <URL value="@styles.css" />
      <URL value="@icons_styles.css" />
   </stylesheets>
</VBox>
