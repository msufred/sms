<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox prefWidth="600.0" spacing="8.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <stylesheets>
      <URL value="@styles.css" />
      <URL value="@icons_styles.css" />
   </stylesheets>
   <children>
      <Label styleClass="form-title" text="Accept Payment" />
      <HBox alignment="CENTER" spacing="8.0">
         <children>
            <Label alignment="CENTER_RIGHT" text="Date">
               <styleClass>
                  <String fx:value="form-label" />
                  <String fx:value="form-label-value" />
               </styleClass>
            </Label>
            <DatePicker fx:id="dpPaymentDate" />
            <Region HBox.hgrow="ALWAYS" />
            <Label alignment="CENTER_RIGHT" text="OR NO">
               <styleClass>
                  <String fx:value="form-label" />
                  <String fx:value="form-label-value" />
               </styleClass>
            </Label>
            <Label fx:id="lblErrPaymentNo" />
            <TextField fx:id="tfPaymentNo" promptText="Required" />
         </children>
         <VBox.margin>
            <Insets top="16.0" />
         </VBox.margin>
      </HBox>
      <VBox spacing="8.0" styleClass="form-content-grey">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="8.0">
               <children>
                  <Label alignment="CENTER_RIGHT" prefWidth="120.0" text="Basic Charges/Fee">
                     <styleClass>
                        <String fx:value="form-label" />
                        <String fx:value="form-label-value" />
                     </styleClass></Label>
                  <Region HBox.hgrow="ALWAYS" />
                  <Label fx:id="lblFee" alignment="CENTER_RIGHT" minWidth="140.0" styleClass="form-label" text="0.00">
                     <padding>
                        <Insets right="9.0" />
                     </padding>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="8.0">
               <children>
                  <Label alignment="CENTER_RIGHT" prefWidth="120.0" text="Prev. Balance">
                     <styleClass>
                        <String fx:value="form-label" />
                        <String fx:value="form-label-value" />
                     </styleClass></Label>
                  <Region HBox.hgrow="ALWAYS" />
                  <Label fx:id="lblPrevBalance" alignment="CENTER_RIGHT" minWidth="140.0" styleClass="form-label" text="0.00">
                     <padding>
                        <Insets right="9.0" />
                     </padding>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="8.0">
               <children>
                  <Label alignment="CENTER_RIGHT" prefWidth="120.0" text="Discount (Less)">
                     <styleClass>
                        <String fx:value="form-label" />
                        <String fx:value="form-label-value" />
                     </styleClass></Label>
                  <Region HBox.hgrow="ALWAYS" />
                  <Label fx:id="lblDiscount" alignment="CENTER_RIGHT" minWidth="140.0" styleClass="form-label" text="0.00">
                     <padding>
                        <Insets right="9.0" />
                     </padding>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="8.0">
               <children>
                  <Label alignment="CENTER_RIGHT" prefWidth="120.0" text="Penalty">
                     <styleClass>
                        <String fx:value="form-label" />
                        <String fx:value="form-label-value" />
                     </styleClass></Label>
                  <Region HBox.hgrow="ALWAYS" />
                  <Label fx:id="lblPenalty" alignment="CENTER_RIGHT" minWidth="140.0" styleClass="form-label" text="0.00">
                     <padding>
                        <Insets right="9.0" />
                     </padding>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="8.0">
               <children>
                  <Label alignment="CENTER_RIGHT" prefWidth="120.0" text="VAT">
                     <styleClass>
                        <String fx:value="form-label" />
                        <String fx:value="form-label-value" />
                     </styleClass>
                  </Label>
                  <Region HBox.hgrow="ALWAYS" />
                  <Label fx:id="lblVat" alignment="CENTER_RIGHT" minWidth="140.0" styleClass="form-label" text="0.00">
                     <padding>
                        <Insets right="9.0" />
                     </padding>
                  </Label>
               </children>
            </HBox>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
      </VBox>
      <HBox alignment="CENTER_RIGHT" spacing="8.0">
         <children>
            <Label alignment="CENTER_RIGHT" text="Total Amount Due">
               <styleClass>
                  <String fx:value="form-label" />
                  <String fx:value="form-label-value" />
               </styleClass></Label>
            <Label fx:id="lblTotalDue" alignment="CENTER_RIGHT" minWidth="150.0" styleClass="form-label-value" text="0.00">
               <padding>
                  <Insets right="9.0" />
               </padding>
            </Label>
         </children>
         <VBox.margin>
            <Insets right="8.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER_RIGHT" spacing="8.0">
         <children>
            <Label alignment="CENTER_RIGHT" text="Amount Paid">
               <styleClass>
                  <String fx:value="form-label" />
                  <String fx:value="form-label-value" />
               </styleClass></Label>
            <TextField fx:id="tfAmount" alignment="CENTER_RIGHT" minWidth="150.0" prefWidth="150.0" style="-fx-font-weight: bold;" styleClass="form-field" text="0.00" />
         </children>
         <VBox.margin>
            <Insets right="8.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER_RIGHT" spacing="8.0">
         <children>
            <Label alignment="CENTER_RIGHT" text="Change">
               <styleClass>
                  <String fx:value="form-label" />
                  <String fx:value="form-label-value" />
               </styleClass></Label>
            <Label fx:id="lblChange" alignment="CENTER_RIGHT" minWidth="150.0" styleClass="form-label" text="0.00">
               <padding>
                  <Insets right="9.0" />
               </padding>
            </Label>
         </children>
         <VBox.margin>
            <Insets right="8.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER_RIGHT" spacing="8.0">
         <children>
            <Label alignment="CENTER_RIGHT" text="Balance">
               <styleClass>
                  <String fx:value="form-label" />
                  <String fx:value="form-label-value" />
               </styleClass></Label>
            <Label fx:id="lblBalance" alignment="CENTER_RIGHT" minWidth="150.0" style="-fx-text-fill: red;" styleClass="form-label" text="0.00">
               <padding>
                  <Insets right="9.0" />
               </padding>
            </Label>
         </children>
         <VBox.margin>
            <Insets right="8.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER_LEFT" spacing="8.0">
         <children>
            <Label text="Cashier" />
            <TextField fx:id="tfCashier" promptText="Cashier/Owner Name" HBox.hgrow="ALWAYS" />
         </children>
         <VBox.margin>
            <Insets top="48.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER_RIGHT" spacing="8.0">
         <children>
            <ProgressBar fx:id="progressBar" prefWidth="200.0" visible="false" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="btnConfirm" mnemonicParsing="false" styleClass="form-button-positve" text="Validate" />
            <Button fx:id="btnCancel" mnemonicParsing="false" styleClass="form-button-regular" text="Cancel" />
         </children>
         <VBox.margin>
            <Insets top="32.0" />
         </VBox.margin>
      </HBox>
   </children>
   <padding>
      <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
   </padding>
</VBox>
